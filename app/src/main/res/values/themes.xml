<resources>
    <!-- Normal App Theme -->
    <style name="Theme.LKPCBibleApp" parent="android:Theme.DeviceDefault.NoActionBar">
        <item name="android:forceDarkAllowed">true</item>
    </style>

    <!-- Splash Screen Theme for Android 12+ -->
    <style name="Theme.LKPCBibleApp.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>
        <item name="postSplashScreenTheme">@style/Theme.LKPCBibleApp</item>
    </style>
</resources>
